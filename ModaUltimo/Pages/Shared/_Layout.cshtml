	width:100%;
	/* Bring the nav above everything else--uncomment if needed.
	position:relative;
	z-index:5;
	*/
}
#nav li{
	float:left;
	margin-right:10px;
	position:relative;
}
#nav a{
	display:block;
	padding:5px;
	color:#fff;
	background:#333;
	text-decoration:none;
}
#nav a:hover{
	color:#fff;
	background:#6b0c36;
	text-decoration:underline;
}

/*--- CSS for Submenu---*/
#nav ul{
	background:#fff; 
	background:rgba(51, 70, 177, 0); 
	list-style:none;
	position:absolute;
	left:-9999px; 
}
#nav ul li{
	padding-top:1px; 
	float:none;
}
#nav ul a{
	white-space:nowrap; 
}
#nav li:hover ul{ 
	left:0; 
}
#nav li:hover a{ 
	background:#4e76e4;
	text-decoration:underline;
}
#nav li:hover ul a{ 
	text-decoration:none;
}
#nav li:hover ul li a:hover{ 
	 background:#333;
} 


