@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Cloth5.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    NEW STYLES FOR YOU THIS FALL
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Cloth6.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                
            </div>
        </div>
        <div class="item">
            <img src="~/images/Cloth4.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    TRENDS HITTING THE STREETS RIGHT NOW
                    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>LET'S DO NEW</h2>
      <img src="~/images/Cloth7.jpg">
    </div>
    <div class="col-md-3">
        <h2>STYLE IS MY GOD</h2>
            <img src="~/images/style.jpg">
    </div>
    <div class="col-md-3">
        <h2>STAY COOL</h2>
            <img src="~/images/cool.jpg">
    </div>
    <div class="col-md-3">
        <h2>SUIT UP !!</h2>
        <img src="~/images/suit.png">
    </div>
</div>


<h1>Dashboard</h1>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="2">Statistics</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Total Number of Stores</td>
                    <td class="text-right">@Model.TotalStores</td>
                </tr>  
                <tr>
                    <td>Total Number of Products</td>
                    <td class="text-right">@Model.TotalProducts</td>
                </tr>
                <tr>
                    <td>Total Number of Inventories</td>
                    <td class="text-right">@Model.TotalCategories</td>
                </tr>  
                  <tr>
                    <td>Total Number of Categories</td>
                    <td class="text-right">@Model.TotalInventories</td>
                </tr>                                                                              
            </tbody>
        </table>
    </div>
</div>